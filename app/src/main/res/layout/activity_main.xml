<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dd.jnistudy.MainActivity">

    <LinearLayout
        android:id="@+id/java_call_natvie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_print"
            android:onClick="printNative"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getmsg"
            android:onClick="getNatvieMsg"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/native_call_java"
        android:layout_below="@id/java_call_natvie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/getattr"
            android:onClick="ChangeAttr"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nativecall"
            android:onClick="CallFunction"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nativecalldiff"
            android:onClick="CallFunctionDiffType"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/super_method"
        android:layout_below="@id/native_call_java"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/superclass"
            android:onClick="CallSuperFunction"/>
    </LinearLayout>
</RelativeLayout>
